# Kraken API credentials (required)
KRAKEN_KEY=key
KRAKEN_PASSCODE="passcode"

# Trading settings (optional - override settings.js)
# PERCENTAGE_DROP=15           # % drop to trigger interest
# FIXED_BUY_AMOUNT=50          # EUR per trade
# MAX_SHARE_PER_ASSET_PERCENT=2.5  # Max % of portfolio per asset
# MIN_TRADE_VOLUME=1000000     # Min 24h EUR volume required
# MAX_GREED_PERCENTAGE=90      # Triggers stop-loss mode
# STOP_LOSS_PERCENTAGE=3       # Stop-loss trigger %

# OpenRouter API (optional - for LLM market analysis)
# OPENROUTER_API_KEY=sk-or-v1-your-api-key-here
# OPENROUTER_MODEL=anthropic/claude-opus-4.5